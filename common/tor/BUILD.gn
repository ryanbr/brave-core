import("//mojo/public/tools/bindings/mojom.gni")

source_set("tor") {
  sources = [
    "switches.cc",
    "switches.h",
    "tor_common.cc",
    "tor_common.h",
    "tor_constants.cc",
    "tor_constants.h",
  ]

  deps = [
    ":pref_names",
    ":proxy_string",
    "//base",
    "//chrome/common:constants",
    "//url:url",
  ]
}

source_set("pref_names") {
  sources = [
    "pref_names.cc",
    "pref_names.h",
  ]
}

mojom("tor_mojom_bindings") {
  sources = [
    "tor_config.mojom",
    "tor_launcher.mojom",
  ]
  public_deps = [
    "//mojo/public/mojom/base",
  ]
}

source_set("proxy_string") {
  sources = [
    "tor_proxy_string_helper.cc",
    "tor_proxy_string_helper.h",
  ]

  deps = [
    "//chrome/common:channel_info",
    "//components/version_info",
  ]
}
